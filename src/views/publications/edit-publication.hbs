<div class="col-md-4 mx-auto">
    <div class="card">
        <div class="card-header">
            <h3>Editar Publicación</h3>
        </div>
        <div class="card-body">
            <form action="/publications/edit-publication/{{publication._id}}" method="post">
                <div class="form-group">
                    <input type="text" name="title" class="form-control" placeholder="Título" value="{{publication.title}}">
                </div>
                <div class="form-group">
                    <textarea name="content" class="form-control">{{publication.content}}</textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-block" type="submit">Guardar</button>
                </div>
            </form>
        </div>
    </div>
</div>