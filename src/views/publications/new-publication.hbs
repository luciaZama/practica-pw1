<div class="container mt-5">
    <div class="card">
        <div class="card-header">
            <h3>Nueva Publicación</h3>
        </div>
        <div class="card-body">
            <form action="/publications/new-publication" method="post">
                <div class="form-group">
                    <input type="text" name="title" class="form-control" placeholder="Título" autofocus>
                </div>
                <div class="form-group">
                    <textarea name="content" class="form-control" placeholder="Texto de la publicación"></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-block" type="submit">Publicar</button>
                </div>
            </form>
        </div>
    </div>
</div>