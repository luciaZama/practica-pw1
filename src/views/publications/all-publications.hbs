
<div class="row">
    {{#each allPublications}}
    <div class="col-md-5">
        <div class="card custom-card" onclick="toggleContent(this)">   
            <div class="card-header">
                <h4 class="card-title d-flex justify-content-between align-items-center">
                    {{title}}
                    <a href="/publications/edit/{{_id}}">
                        <i class="fas fa-edit"></i>
                    </a>
                </h4>
            </div>
            <div class="card-body d-none">
                <p class="card-text">{{content}}</p>    
                <form action="/publications/delete/{{_id}}?_method=delete" method="post">
                    <input type="hidden" name="_method" value="delete">
                    <button class="btn btn-danger btn-block btn-sm" type="submit">Eliminar Publicaci√≥n</button>
                </form>
            </div>
        </div>
    </div>
    {{/each}}
</div>

<script>
function toggleContent(cardElement) {
    const cardBody = cardElement.querySelector('.card-body');
    if (cardBody.classList.contains('d-none')) {
        cardBody.classList.remove('d-none');
    } else {
        cardBody.classList.add('d-none'); 
    }
}
</script>

